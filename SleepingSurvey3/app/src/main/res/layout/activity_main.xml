<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yg.sleepingsurvey.MainActivity"
    android:onClick="setButtonView1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="숙면 일기"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Insomnia severity index"
        android:id="@+id/main_button1"
        android:layout_above="@+id/main_button2"
        android:layout_alignParentEnd="true"
        android:onClick="setMainButtonView" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="수면위생 자가 체크"
        android:id="@+id/main_button2"
        android:layout_above="@+id/main_button3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="취침 전 일기"
        android:id="@+id/main_button3"
        android:layout_above="@+id/main_button4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="기상 후 일기"
        android:id="@+id/main_button4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
